include ../node_modules/jade-bootstrap/_bootstrap
link(rel='stylesheet', href='/stylesheets/style.css')

block content
    section
        .container
            div.row
                div.col-lg-12.col-md-12.col-sm-12
                    h1 Continuous Call for Papers!
                    h2 The Atelier is every six months, so we need a continuous flow of amazing content to deliver. To help we have a continuous call for papers in place, so please submit whenever inspiration takes you!
                div.col-lg-12.col-md-12.col-sm-12
                    form(action="/callforpapers", method="post")
                    div(data-role='fieldcontain').form-group
                        fieldset(data-role='controlgroup')
                        label(for='name') Name
                        input(id='Name',type='text',value='',placeholder='name',name='name', required).form-control
                    div(data-role='fieldcontain').form-group
                        fieldset(data-role='controlgroup')
                        label(for='email') Email Address
                        input(id='email',type='text',value='',placeholder='email',name='email', required).form-control
                    div(data-role='fieldcontain').form-group
                        fieldset(data-role='controlgroup')
                        label(for='twitter') Twitter Handle
                        input(id='twitter',type='text',value='',placeholder='@',name='twitter').form-control
                    div(data-role='fieldcontain').form-group
                        fieldset(data-role='controlgroup')
                        label(for='title') Title
                        input(id='title',type='text',value='', placeholder='title', name='title', required).form-control
                    div(data-role='fieldcontain').form-group
                        fieldset(data-role='controlgroup')
                        label(for='abstract') Abstract
                        textarea(id='abstract',type='text',value='',placeholder='Your amazing idea goes here!',name='abstract', required).form-control
                    div(data-role='fieldcontain').form-group
                        fieldset(data-role='controlgroup')
                        label(for='bio') About you!
                        textarea(id='bio',type='text',value='',placeholder='Tell us a bit about yourself',name='bio', required).form-control
                    div(data-role='fieldcontain').form-group
                        input(type='submit',value='Submit proposal',data-transition='fade', data-theme='c')