extends layout

block content
	h1 Continuous Call for Papers!
	h2 The Atelier is every six months, so we need a continuous flow of amazing content to deliver. To help we have a continuous call for papers in place, so please submit whenever inspiration takes you!
	form(action="/callforpapers", method="post")
		div(data-role='fieldcontain')
			fieldset(data-role='controlgroup')
				label(for='name') Name
					input(id='Name',type='text',value='',placeholder='',name='name', required)
		div(data-role='fieldcontain')
			fieldset(data-role='controlgroup')
				label(for='email') Email Address
					input(id='email',type='text',value='',placeholder='@',name='email', required)
		div(data-role='fieldcontain')
			fieldset(data-role='controlgroup')
				label(for='twitter') Twitter Handle
					input(id='twitter',type='text',value='',placeholder='@',name='twitter')
		div(data-role='fieldcontain')
			fieldset(data-role='controlgroup')
				label(for='title') Title
					input(id='title',type='text',value='',name='title', required)
		div(data-role='fieldcontain')
			fieldset(data-role='controlgroup')
				label(for='abstract') Abstract
					textarea(id='abstract',type='text',value='',placeholder='Your amazing idea goes here!',name='abstract', required)
		div(data-role='fieldcontain')
			fieldset(data-role='controlgroup')
				label(for='bio') About you!
					textarea(id='bio',type='text',value='',placeholder='Tell us a bit about yourself',name='bio', required)
		div(data-role='fieldcontain')
					input(type='submit',value='Submit proposal',data-transition='fade', data-theme='c')