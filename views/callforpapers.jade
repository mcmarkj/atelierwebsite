extends layout

block content
	h1= title
	p Welcome to #{title}
	form(action="/callforpapers", method="post")
		div(data-role='fieldcontain')
			fieldset(data-role='controlgroup')
				label(for='name') Name
					input(id='Name',type='text',value='',placeholder='',name='name')
		div(data-role='fieldcontain')
			fieldset(data-role='controlgroup')
				label(for='email') Email Address
					input(id='email',type='text',value='',placeholder='@',name='email')
		div(data-role='fieldcontain')
			fieldset(data-role='controlgroup')
				label(for='twitter') Twitter Handle
					input(id='twitter',type='text',value='',placeholder='@',name='twitter')
		div(data-role='fieldcontain')
			fieldset(data-role='controlgroup')
				label(for='title') Title
					input(id='title',type='text',value='',name='title')
		div(data-role='fieldcontain')
			fieldset(data-role='controlgroup')
				label(for='abstract') Abstract
					textarea(id='abstract',type='text',value='',placeholder='Your amazing idea goes here!',name='abstract')
		div(data-role='fieldcontain')
					input(type='submit',value='Submit proposal',data-transition='fade', data-theme='c')