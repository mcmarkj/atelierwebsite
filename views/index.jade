include ../node_modules/jade-bootstrap/_bootstrap
include mixins/nav-header
link(rel='stylesheet', href='/stylesheets/style.css')

block content
	- var navitems = ["Sponsor Us", "Call for Papers", "Previous Ateliers"];
	+navHeader(navitems)
	section(style="padding-top: 50px;")
	div 
		h2 We are back!
		h3 On the 9th of May 2017, the fully independent, punk, Leeds Testing Atelier returns at the amazing Wharf Chambers for a day of learning, collaboration and laughs! 
	
	block speakers
		h2 Our amazing speakers!
		for speaker in speakers
			div(class="speakers-table")
				table
					tr
						td.mugshot
							img.speaker-pic(src='#{speaker.picture}')
						td.spacer
						td.blurb
							h3.speaker-name #{speaker.name}
							h4.speaker-title #{speaker.title}
							p.speaker-bio #{speaker.bio}
							p.speaker-abstract #{speaker.abstract}
							a.twitter-follow-button(href="https://twitter.com/#{speaker.twitter}", data-show-count="false"): Follow #{speaker.twitter}
				hr
	footer
		p Copyright &copy; #{new Date().getFullYear()} The Atelier Gang
