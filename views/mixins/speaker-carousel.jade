mixin speakerCarousel(id, speakers)
    .carousel.slide(id="carousel-#{id}",data-ride="carousel")
        //- Indicators
        ol.carousel-indicators
            each speaker,index in speakers
                if(index === 0)
                    li.active(data-target="#carousel-#{id}", data-slide-to="#{index}")
                else
                    li(data-target="#carousel-#{id}", data-slide-to="#{index}")


        //- Wrapper for slides
        .carousel-inner(role="listbox")
            each speaker,index in speakers
                if(index === 0)
                    .item.active
                        table
                            tr
                                td.blurb
                                    img(src="#{speaker.picture}")
                                    h4.speaker-name #{speaker.name}
                                    h5.speaker-title #{speaker.title}
                                    p.speaker-bio #{speaker.bio}
                                    p.speaker-abstract #{speaker.abstract}
                                    a.twitter-follow-button(href="https://twitter.com/#{speaker.twitter}", data-show-count="false"): Follow #{speaker.twitter}
                else
                    .item
                        table
                            tr
                                td.blurb
                                    img(src="#{speaker.picture}")
                                    h4.speaker-name #{speaker.name}
                                    h5.speaker-title #{speaker.title}
                                    p.speaker-bio #{speaker.bio}
                                    p.speaker-abstract #{speaker.abstract}
                                    a.twitter-follow-button(href="https://twitter.com/#{speaker.twitter}", data-show-count="false"): Follow #{speaker.twitter}
        //-  Controls
        a.left.carousel-control(href="#carousel-#{id}", role="button", data-slide="prev")
            +icon("chevron-left")
            span.sr-only Previous
        a.right.carousel-control(href="#carousel-#{id}", role="button", data-slide="next")
            +icon("chevron-right")
            span.sr-only Next